html, body, h1, h3, p{ /* putting all 0 to avoid ambeguities*/ 
    margin: 0;
    padding: 0;
}

body {
    width: 46em;    /* Fixed width relative to default font size 16px */ 
    font-family: "Inter", sans-serif;
    margin: 0 auto; /* Center everything */
}

header {
    display: flex;
    justify-content: space-between;
    height: 15em;
    background-image: url('./images/background-img.png'), linear-gradient(to bottom, rgb(0 0 0 / 100%), rgb(0 0 0  / 60%));
    background-size: cover;
    background-blend-mode: darken;
    color: rgba(255, 255, 255, 1);
}

header > h1, h3 {
    margin: auto 0;
}

header > h3 {
    font-size: 0.875rem;
    line-height: 1.252m;
    margin-right: 2em;
}

header > h1 {
    margin-left: 1em;
    font-size: 2.625em;
    font-weight: 800;
    line-height: 1.48em;
    letter-spacing: -0.045em;
}

.searchBox {
    display: flex;
    justify-content: space-between;
    margin: -1.19rem auto 0 auto;
    align-items: center;
    width: 34.375em;
    height: 2.375em;
    color: rgba(55, 65, 81, 1);
    border-radius: 0.375rem;
    border: 0.06rem solid rgba(209, 213, 219, 1);
    background-color: rgba(255, 255, 255, 1);
}

.searchBox  div {
    display: inherit;
    align-items: center;
}

/* Remove the blue border box on focus */
#search {
    outline: none;
    border: none;
    background-color: rgba(255, 255, 255, 1);
}


.material-symbols-outlined {
    padding: 0 0.125rem 0 0.625rem;
}
.searchBtn {
    justify-content:center;
    width: 8em;
    height: 2.375rem;
    border-radius: 0 0.375rem 0.375rem 0;
    border: 0.06rem solid  rgba(209, 213, 219, 1);
    font-weight: 500;
}
.searchBtn:hover{
    opacity: 60%;
    cursor: pointer;
}

.container {
    display: flex;
    width: 34.375em;
    margin: 1.25rem auto 0 auto;
    padding-top: 2.5em;
}
img {
    width: 6.25em;
    height: 9.213em;
    border-radius: 0.145em 0em 0em 0em;
}
.title-time-desc {
    margin-left: 1.25rem;
}
.star_rate {
    margin: 0 0.25rem 0 0.5rem;
    color: #FEC654;
}
.add_circle {
    color: #111827;
    width: 1rem;
    margin-left: 1.875rem;
    margin-right: 0.625rem;
}
.add_circle:hover{
    opacity: 50%;
    cursor: pointer;
}

.title > h2 {
    font-size: 0.75rem;
    font-weight: 400;
    line-height: 1.25rem;
}
.title > h1 {
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.25rem;
}

.time > p {
    font-size: 1rem;
}

.time > h3 {
    margin-right: 1.125em;
    font-size: 0.75rem;
    font-weight: 400;
}

.title, .time {
    display: flex;
    align-items: center;
}

.time {
    margin: 0.6875rem 0 0.5rem 0;
}

p {
    font-size: 0.875rem;
    line-height: 1.25rem;
    color:#6B7280;
}


.divider {
    border-top: 0.01rem solid #e5e7ebb6; /* Creates the border with specified color */
    width: 34.375rem;                   /* Specifies the width of the divider */
    height: 0.06rem;                     /* Height is set to 0 as it's just a line */
    margin: 1.875rem auto 1.56rem auto;
}

a {
    color: inherit;  /* blue colors for links too */
    text-decoration: inherit; /* no underline */
  }